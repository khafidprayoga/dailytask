{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "repository": "git@github.com:khafidprayoga/nodejs-boilerplate.git",
  "author": "Khafid Prayoga <khafidp@pm.me>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/bin/http.js",
    "debug": "DEBUG=express:* nodemon ./src/bin/http.js",
    "lint": "eslint ./src",
    "prod": "NODE_ENV=production node ./src/bin/http.js",
    "migrate": "node-pg-migrate -m src/migrations/ --verbose",
    "test": "jest --setupFiles dotenv/config -i",
    "test:watch": "jest --watchAll --coverage --setupFiles dotenv/config -i",
    "test:watch:change": "jest --watch --setupFiles dotenv/config -i"
  },
  "jest": {
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/__test__/",
      "<rootDir>/src/app.js"
    ],
    "moduleNameMapper": {
      "@app": "<rootDir>/src/app.js",
      "@connections": "<rootDir>/src/services/database/connection.js",
      "@controllers/(.*)": "<rootDir>/src/controllers/$1",
      "@helpers/(.*)": "<rootDir>/src/__test__/$1",
      "@exceptions/(.*)": "<rootDir>/src/exceptions/$1",
      "@routes/(.*)": "<rootDir>/src/routes/$1",
      "@services/(.*)": "<rootDir>/src/services/$1",
      "@utils/(.*)": "<rootDir>/src/utils/$1",
      "@validations/(.*)": "<rootDir>/src/validations/$1"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "node-pg-migrate": "^6.2.1",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2"
  }
}
